{
  "name": "terminatui-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "build": "bun run --filter '*' build",
    "test": "bun run --filter '*' test",
    "example": "bun run examples/tui-app/index.ts",
    "example:compile": "export workspace_dir=$(pwd); (cd /tmp; bun $workspace_dir/examples/tui-app/build.ts)"
  },
  "dependencies": {
    "@pablozaiden/terminatui": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19",
    "typescript": "5.9.3"
  }
}
